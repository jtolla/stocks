<?xml version="1.0" encoding="UTF-8"?>
<project name="stocks" default="all">
  
  
  <property file="stocks.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="128m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*.lib/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/*.rbc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.zip"/>
    <include name="*.apk"/>
    <include name="*.war"/>
    <include name="*.egg"/>
    <include name="*.ear"/>
    <include name="*.ane"/>
    <include name="*.swc"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.6" value="${jdk.home.1.6}/bin"/>
  <path id="jdk.classpath.1.6">
    <fileset dir="${jdk.home.1.6}">
      <include name="lib/deploy.jar"/>
      <include name="lib/dt.jar"/>
      <include name="lib/javaws.jar"/>
      <include name="lib/jce.jar"/>
      <include name="lib/jconsole.jar"/>
      <include name="lib/management-agent.jar"/>
      <include name="lib/plugin.jar"/>
      <include name="lib/sa-jdi.jar"/>
      <include name="../Classes/charsets.jar"/>
      <include name="../Classes/classes.jar"/>
      <include name="../Classes/jsse.jar"/>
      <include name="../Classes/ui.jar"/>
      <include name="lib/ext/apple_provider.jar"/>
      <include name="lib/ext/dnsns.jar"/>
      <include name="lib/ext/localedata.jar"/>
      <include name="lib/ext/sunjce_provider.jar"/>
      <include name="lib/ext/sunpkcs11.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.6}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.6}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.6"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.hibernate-4.3.1.classpath">
    <pathelement location="${basedir}/../../Downloads/hibernate-release-4.3.1.Final/lib/required/antlr-2.7.7.jar"/>
    <pathelement location="${basedir}/../../Downloads/hibernate-release-4.3.1.Final/lib/required/dom4j-1.6.1.jar"/>
    <pathelement location="${basedir}/../../Downloads/hibernate-release-4.3.1.Final/lib/required/hibernate-commons-annotations-4.0.4.Final.jar"/>
    <pathelement location="${basedir}/../../Downloads/hibernate-release-4.3.1.Final/lib/required/hibernate-core-4.3.1.Final.jar"/>
    <pathelement location="${basedir}/../../Downloads/hibernate-release-4.3.1.Final/lib/required/hibernate-jpa-2.1-api-1.0.0.Final.jar"/>
    <pathelement location="${basedir}/../../Downloads/hibernate-release-4.3.1.Final/lib/required/jandex-1.1.0.Final.jar"/>
    <pathelement location="${basedir}/../../Downloads/hibernate-release-4.3.1.Final/lib/required/javassist-3.18.1-GA.jar"/>
    <pathelement location="${basedir}/../../Downloads/hibernate-release-4.3.1.Final/lib/required/jboss-logging-3.1.3.GA.jar"/>
    <pathelement location="${basedir}/../../Downloads/hibernate-release-4.3.1.Final/lib/required/jboss-logging-annotations-1.2.0.Beta1.jar"/>
    <pathelement location="${basedir}/../../Downloads/hibernate-release-4.3.1.Final/lib/required/jboss-transaction-api_1.2_spec-1.0.0.Final.jar"/>
  </path>
  
  <path id="library.junit-4.11-snapshot-20120416-1530.classpath">
    <pathelement location="${basedir}/../90.308/lib/junit-4.11-SNAPSHOT-20120416-1530.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm4-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module stocks -->
  
  <dirname property="module.stocks.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.stocks" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.stocks" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.stocks" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.stocks" value="-encoding UTF-8 -source 1.6 ${compiler.args}"/>
  
  <property name="stocks.output.dir" value="${module.stocks.basedir}/out/production/stocks"/>
  <property name="stocks.testoutput.dir" value="${module.stocks.basedir}/out/test/stocks"/>
  
  <path id="stocks.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="stocks.module.production.classpath">
    <path refid="${module.jdk.classpath.stocks}"/>
    <path refid="library.junit-4.11-snapshot-20120416-1530.classpath"/>
    <path refid="library.hibernate-4.3.1.classpath"/>
  </path>
  
  <path id="stocks.runtime.production.module.classpath">
    <pathelement location="${stocks.output.dir}"/>
    <path refid="library.junit-4.11-snapshot-20120416-1530.classpath"/>
    <path refid="library.hibernate-4.3.1.classpath"/>
  </path>
  
  <path id="stocks.module.classpath">
    <path refid="${module.jdk.classpath.stocks}"/>
    <pathelement location="${stocks.output.dir}"/>
    <path refid="library.junit-4.11-snapshot-20120416-1530.classpath"/>
    <path refid="library.hibernate-4.3.1.classpath"/>
  </path>
  
  <path id="stocks.runtime.module.classpath">
    <pathelement location="${stocks.testoutput.dir}"/>
    <pathelement location="${stocks.output.dir}"/>
    <path refid="library.junit-4.11-snapshot-20120416-1530.classpath"/>
    <path refid="library.hibernate-4.3.1.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.stocks">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.stocks">
    <patternset refid="excluded.from.module.stocks"/>
  </patternset>
  
  <path id="stocks.module.sourcepath">
    <dirset dir="${module.stocks.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.stocks" depends="compile.module.stocks.production,compile.module.stocks.tests" description="Compile module stocks"/>
  
  <target name="compile.module.stocks.production" depends="register.custom.compilers" description="Compile module stocks; production classes">
    <mkdir dir="${stocks.output.dir}"/>
    <javac2 destdir="${stocks.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.stocks}/javac">
      <compilerarg line="${compiler.args.stocks}"/>
      <bootclasspath refid="stocks.module.bootclasspath"/>
      <classpath refid="stocks.module.production.classpath"/>
      <src refid="stocks.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.stocks"/>
    </javac2>
    
    <copy todir="${stocks.output.dir}">
      <fileset dir="${module.stocks.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.stocks.tests" depends="register.custom.compilers,compile.module.stocks.production" description="compile module stocks; test classes" unless="skip.tests"/>
  
  <target name="clean.module.stocks" description="cleanup module">
    <delete dir="${stocks.output.dir}"/>
    <delete dir="${stocks.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.stocks" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.stocks" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>